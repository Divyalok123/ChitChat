<link rel="stylesheet" href="/css/signup.css" type="text/css">
<nav class="sign-in-header">
    <h3><a href="/">Registration</a></h3>
</nav>
<div class="sign-in-div">   
    <div class="sign-in-box">
        <form action="/signup/createuser" method="POST" class="sign-in-form">
            <div class="form-field form-header">
               <h3>SIGN UP</h3>
            </div>
            <div class="form-field">
                <div><label for="name">Name:</label></div>
                <div><input type="text" id="name" name="name" placeholder="xxyyzz" required></div>
            </div>
            <div class="form-field">
                <div><label for="email">Email Id:</label></div>
                <div><input type="email" id="email" name="email" placeholder="abc@def.com" required></div>
            </div>
            <div class="form-field">
                <div><label for="password">Password:</label></div>
                <div><input type="password" id="password" name="password" required></div>
            </div>  
            <div class="form-field">
                <div><label for="confirm_password">Confirm Password:</label></div>
                <div><input type="password" id="confirm_password" name="confirm_pass" required></div>
            </div>    
            <div class="form-field form-field-button">
                <button type="submit" id="sign-in-button">Register</button>
            </div>
            <p class="form-bottom">
                Already have an account? <button class="link-button"><a href="/signin">Login</a></button>
            </p>        
        </form>
    </div>
</div>
