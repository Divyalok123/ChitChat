<link rel="stylesheet" href="/css/chatroom.css" type="text/css">

<div class="chatroom">
    <div class="chatbox">
        <div class="chatbox-item">
            <div class="chatbox-sidebar">
                <!-- <h4 class="sidebar-header">Rooms</h4>
                <div class="chatbox-rooms sidebar-items">
                    <p class="chatbox-sidebar-button">Room1</p>
                    <p class="chatbox-sidebar-button">Room2</p>
                </div> -->
                <h4 class="sidebar-header">Users</h4>
                <div class="chatbox-users sidebar-items">
                    <% for(let i = 0; i < users.length; i++) { %>
                        <% if(users[i].id != locals.user.id) { %>
                            <p class="chatbox-sidebar-button" id="<%= users[i].id %>"><%= users[i].username %></p>
                        <% } %>
                    <% } %>
                </div>
            </div>
            <div class="chatbox-content">
                <div class="chatbox-header">
                    <div id="chatbox-hamburger">
                        <div id="hb-1"></div>
                        <div id="hb-2"></div>
                        <div id="hb-3"></div>
                    </div>
                    <p class="font-koho chatbox-header-text">
                        ChitChat
                    </p>
                </div>
                <div class="message-box">
                    <ul class="chatbox-messages font-raleway">
                        <li class="sender-message chat-message">
                            <span class="message-content">Sender guy</span>
                            <span class="message-time">12:13</span>
                        </li>
                        <li class="own-message chat-message">
                            <span class="message-content">Receiver</span>
                            <span class="message-time">10:12</span>
                        </li>
                    </ul>
                </div>
                <form action="#" id="input-form" class="message-input-box">
                    <input type="text" id="message-input">
                    <button id="message-send" type="submit">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/chatroom.js" type="text/javascript"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/clientSockets.js"></script>

