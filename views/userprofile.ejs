<style>
  .profile.page {
    width: 100%;
    height: 90vh;
    padding: 10px;
    position: relative;
  }

  .profile-box {
    width: 30%;
    position: absolute;
    left: 10%;
    top: 10%;
  }
</style>

<div class="profile-page">
  <div class="profile-box">
    <div class="card" style="width: 18rem;">
      <% if(user.avatar != undefined) { %>
        <% console.log(user.avatar) %>
        <img class="card-img-top" src="<%= user.avatar %>" alt="Profile Pic">
      <% } else { %>
        <img class="card-img-top" src="/img/logoimg.png" alt="Profile Pic">
      <% } %>
      <div class="card-body">
        <% if(locals.user) { %>
          <h5 class="card-title">
            <%= user.name %>
          </h5>
        <% } else { %>
          <h5 class="card-title">
            What the hell happened!
          </h5>
        <% } %>
          <p class="card-text">
            Some quick example text to build on the card title and make up the bulk of the card's content.
          </p>
      </div>
    </div>
    <br>

    <% if(profile_user.id === locals.user.id) { %>
      <form action="/update/<%= locals.user.id %>" method="POST" enctype="multipart/form-data">
        <div class="input-group mb-3">
          <input type="file" class="form-control" name="avatar" id="inputGroupFile02">
        </div>
        <button class="btn btn-secondary btn-sm" type="submit">Upload</button>
      </form>
    <% } %>
  </div>
</div>